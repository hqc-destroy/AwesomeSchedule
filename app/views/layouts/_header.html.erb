<div class="header">
    <div class="uk-text-center" uk-grid>
        <div class="uk-width-1-1@s uk-width-1-3@m">
            <%= link_to root_path do %>
            <%= image_tag "logo.png" %>
            <% end %>
        </div>
        <div class="uk-text-middle uk-width-1-1@s uk-width-2-3@m uk-visible@m">
            <div class="uk-text-right">
                <% if user_signed_in? %>
                <%= link_to edit_user_registration_path, method: :get do %>
                <span style="color: black !important; font-size: large;">
                    <% if current_user.avatar.attached?%>
                    <%= image_tag current_user.avatar, style: "height:60px;width:60px;border-radius: 50%;" ,alt: "avatar"%>
                    <%end%>
                    <%=  current_user.name %>
                </span>
                <% end %>
                <%= link_to destroy_user_session_path, method: :delete do %>
                <span style="color: black !important; font-size: large;"><i class="fa fa-sign-out" aria-hidden="true" style="color: blue"></i></span>
                    <%= link_to '/notifications' do %>
                        <i class="fa fa-bell" aria-hidden="true"></i>
                    <% end %>
                <% end %>
                <% else %>

                <%= link_to new_user_session_path do %>
                <span style="color: black !important; font-size: large;"><i class="fa fa-sign-in" aria-hidden="true" style="padding-right: 5px;color: blue"></i>サインイン｜</span>
                <% end %>
                <%= link_to new_user_registration_path do %>
                <span style="color: black !important; font-size: large;"><i class="fa fa-user-plus" aria-hidden="true" style="color:green"></i>サインアップ</span>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
